  <script>
    function validateForm() {
      let firstName = document.querySelector("input[name='shipping[first_name]']").value.trim();
      let lastName = document.querySelector("input[name='shipping[last_name]']").value.trim();
      let streetAddress = document.querySelector("input[name='shipping[street_address]']").value.trim();
      let telephone = document.querySelector("input[name='shipping[telephone]']").value.trim();
      let zipCode = document.querySelector("input[name='shipping[zipcode]']").value.trim();

      let billingFirstName = document.querySelector("input[name='billing[first_name]']").value.trim();
      let billingLastName = document.querySelector("input[name='billing[last_name]']").value.trim();
      let billingStreetAddress = document.querySelector("input[name='billing[street_address]']").value.trim();
      let billingTelephone = document.querySelector("input[name='billing[telephone]']").value.trim();
      let billingZipCode = document.querySelector("input[name='billing[zipcode]']").value.trim();

      let nameRegex = /^[A-Za-z]{3,}$/; 
      let streetRegex = /^[A-Za-z0-9\s-]+$/;
      let phoneRegex = /^[6-9]\d{9}$/;
      let zipRegex = /^[1-9]\d{5}$/;




      if (!nameRegex.test(firstName)) {
        alert("Shipping First Name must be at least 3 letters, no numbers/special symbols.");
        return false;
      }
      if (!nameRegex.test(lastName)) {
        alert("Shipping Last Name must be at least 3 letters, no numbers/special symbols.");
        return false;
      }
      if (!nameRegex.test(billingFirstName)) {
        alert("Billing First Name must be at least 3 letters, no numbers/special symbols.");
        return false;
      }
      if (!nameRegex.test(billingLastName)) {
        alert("Billing Last Name must be at least 3 letters, no numbers/special symbols.");
        return false;
      }

      if (!streetRegex.test(streetAddress)) {
        alert("Shipping Street Address can contain letters, numbers, spaces, and '-'.");
        return false;
      }
      if (!streetRegex.test(billingStreetAddress)) {
        alert("Billing Street Address can contain letters, numbers, spaces, and '-'.");
        return false;
      }

      if (!phoneRegex.test(telephone)) {
        alert("Shipping Telephone must be a 10-digit number starting with 6-9.");
        return false;
      }
      if (!phoneRegex.test(billingTelephone)) {
        alert("Billing Telephone must be a 10-digit number starting with 6-9.");
        return false;
      }


      if (!zipRegex.test(zipCode)) {
        alert("Shipping ZIP Code must be exactly 6 digits and cannot start with 0.");
        return false;
      }
      if (!zipRegex.test(billingZipCode)) {
        alert("Billing ZIP Code must be exactly 6 digits and cannot start with 0.");
        return false;
      }

      return true;
    }
  </script>

