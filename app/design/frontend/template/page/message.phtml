<?php
$error_messages = $this->getErrorMessage();
$warning_messages = $this->getWarningMessage();
$success_messages = $this->getSuccessMessage();
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message Alerts</title>
    <style>
        .custom-alert {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            font-weight: bold;
            font-family: Arial, sans-serif;
            max-width: 400px;
            opacity: 1;
            transition: opacity 0.5s ease-out;
        }
        .custom-alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .custom-alert-warning {
            background-color: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }
        .custom-alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
    </style>
</head>
<body>

    <?php if (!empty($error_messages)): ?>
        <?php foreach ((array) $error_messages as $message): ?>
            <div class="custom-alert custom-alert-error"><?php echo htmlspecialchars($message); ?></div>
        <?php endforeach; ?>
    <?php endif; ?>

    <?php if (!empty($warning_messages)): ?>
        <?php foreach ((array) $warning_messages as $message): ?>
            <div class="custom-alert custom-alert-warning"><?php echo htmlspecialchars($message); ?></div>
        <?php endforeach; ?>
    <?php endif; ?>

    <?php if (!empty($success_messages)): ?>
        <?php foreach ((array) $success_messages as $message): ?>
            <div class="custom-alert custom-alert-success"><?php echo htmlspecialchars($message); ?></div>
        <?php endforeach; ?>
    <?php endif; ?>

    <script>
        // Select all alert messages
        const alerts = document.querySelectorAll('.custom-alert');

        // Hide each alert after 2 seconds
        alerts.forEach(alert => {
            setTimeout(() => {
                alert.style.opacity = "0"; // Fade out effect
                setTimeout(() => alert.remove(), 500); // Remove from DOM after fade out
            }, 2000);
        });
    </script>

</body>
</html>
